def mayor (lista):
    elemento = 0

    for numero in lista: #ciclo for en donde recorro los valores de la lista
        if float(numero) > float(elemento):
            elemento = numero
        else:
            elemento = elemento
         
    return elemento


def menor (lista):
    elemento = 0

    for numero in lista: #ciclo for en donde recorro los valores de la lista
        if float(numero) <  float(elemento):
            elemento = numero
        else:
            elemento = elemento
         
    return elemento



